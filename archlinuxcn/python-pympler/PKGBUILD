_pkgname=pympler
pkgname=python-pympler
pkgver=1.0
pkgrel=1
pkgdesc='Development tool to measure, monitor and analyze the memory behavior of Python objects in a running Python application'
arch=('any')
url='https://github.com/pympler/pympler'
license=('Apache')
depends=(
  python
)
makedepends=(
  python-setuptools
)

source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/pympler/pympler/archive/refs/tags/${pkgver}.tar.gz"
)
sha512sums=('32369abd4a0a64815e658e8f4a98a3ffa11fd5c10369e3f788c700f3e2b48c5145b8f2c2bab4c91c8ab1a9d54a66404eb9571a84134b414194e676dbd077c00f')

build() {
  cd "${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
}
