source=("archlinuxcn-keyring-$pkgver.tar.gz::https://github.com/archlinuxcn/archlinuxcn-keyring/archive/$pkgver.tar.gz")
sha512sums=('78383de63a0f8b94a53f426e2279d10c9ccfa774d8b78a47961ff22b0308825ad176ddcbda52c2de8b4fd34955a40f7fdcfd2dc226c075e908bdb6f79bdcb4af')

package() {
