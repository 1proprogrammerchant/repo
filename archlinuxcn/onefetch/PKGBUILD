# Maintainer: KingofToasters <themanhimself at sgregoratto dot me>
# Contributor: Ariel AxionL <i (at) axionl (dot) me>

pkgname=onefetch
pkgver=2.9.0
pkgrel=1
depends=('zlib' 'gcc-libs')
makedepends=('rust' 'cargo')
url="https://github.com/o2sh/onefetch"
pkgdesc="Displays information about your project directly on your terminal"
license=('MIT')
source=("${pkgname}-${pkgver}.tar.gz::$url/archive/v$pkgver.tar.gz")
arch=('x86_64')
sha256sums=('55d8757b0d41b1ce2ac1e7c1b9960c5542675f6e5234158df029b967e5100e2a')

build() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    cargo build --release
}

package() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    install -Dm755 "target/release/onefetch" "${pkgdir}/usr/bin/onefetch"
    install -Dm644 "LICENSE.md" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.md"
}

# vim:set ts=4 sw=4 et:
