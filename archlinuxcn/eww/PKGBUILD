# Maintainer: Y7n05h <Y7n05h(aT)protonmail--d0t--com>

pkgbase=eww
pkgname=(eww-x11 eww-wayland)
pkgver=0.3.0
pkgrel=1
arch=("x86_64")
url="https://github.com/elkowar/eww"
license=("MIT")
makedepends=("cargo-nightly" "rust-nightly"
	gtk-layer-shell
	libgobject-2.0.so
	libgtk-3.so=0-64
	libgdk-3.so=0-64
	libpango-1.0.so=0-64
	cairo
	libgdk_pixbuf-2.0.so=0-64
	libgio-2.0.so=0-64
	libglib-2.0.so=0-64
	gcc-libs
	glibc
)
provides=("eww")
replaces=()
source=("$pkgbase-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('5b6ef95836e298b856498c9fb75d24b6abed4bb3275137d00fe31cceffe3ced1')

package_eww-x11() {
	pkgdesc="ElKowars wacky widgets(For x11 only)"
	depends=(
		libgobject-2.0.so
		libgtk-3.so=0-64
		libgdk-3.so=0-64
		libpango-1.0.so=0-64
		cairo
		libgdk_pixbuf-2.0.so=0-64
		libgio-2.0.so=0-64
		libglib-2.0.so=0-64
		gcc-libs
		glibc
	)
	conflicts=("eww-wayland" "eww")

	cd $pkgbase-$pkgver
	export CARGO_TARGET_DIR=target
	cargo build --release
	install -Dm755 target/release/$pkgbase "$pkgdir/usr/bin/$pkgbase"
}
package_eww-wayland() {
	pkgdesc="ElKowars wacky widgets(For wayland only)"
	depends=(
		libgobject-2.0.so
		libgtk-3.so=0-64
		libgdk-3.so=0-64
		libpango-1.0.so=0-64
		cairo
		libgdk_pixbuf-2.0.so=0-64
		libgio-2.0.so=0-64
		libglib-2.0.so=0-64
		gcc-libs
		glibc
	)
	conflicts=("eww-x11" "eww")

	cd $pkgbase-$pkgver
	export CARGO_TARGET_DIR=target
	cargo build --release --no-default-features --features=wayland
	install -Dm755 target/release/$pkgbase "$pkgdir/usr/bin/$pkgbase"
}
