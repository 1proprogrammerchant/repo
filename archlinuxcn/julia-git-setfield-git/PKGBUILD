pkgname=julia-git-setfield-git
pkgver=0.8.1
pkgrel=1
pkgdesc="Setfield.jl"
url="https://github.com/jw3126/Setfield.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
provides=(julia-git-setfield)
source=(git://github.com/jw3126/Setfield.jl)
md5sums=('SKIP')

pkgver() {
  cd Setfield.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Setfield.jl

  . /usr/lib/julia/julia-install-pkg.sh Setfield "${pkgdir}" "${pkgname}" julia-git
}
