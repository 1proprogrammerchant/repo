# Maintainer: Butui Hu <hot123tea123@gmail.com>

pkgname=python-pytorch-ignite
_pkgname=ignite
pkgver=0.4.7
pkgrel=3
pkgdesc='High-level library to help with training and evaluating neural networks in PyTorch flexibly and transparently'
arch=('any')
url='https://github.com/pytorch/ignite'
license=('BSD')
depends=(
  python-pytorch
)
makedepends=(
  python-setuptools
)

source=("${pkgname}-${pkgver}.tar.gz::https://github.com/pytorch/ignite/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('2501022d6952e95313b743affcbc2c742806332a35f67b63537cf6b4295c16d39cea90f20a2d99fa2b0f62961ec90c45989ec86c1ae1b5fa787a0497e8eaa9cf')

build() {
  cd "${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
# vim:set ts=2 sw=2 et:
