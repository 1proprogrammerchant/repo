# Maintainer: DuckSoft <realducksoft at gmail dot com>

pkgname=miller
pkgver=5.10.1
arch=('x86_64')
pkgrel=1
pkgdesc="Swiss Army Knife for CSV, TSV and tabular JSON format text files"
url="https://github.com/johnkerl/miller"
depends=(glibc)
source=("$url/releases/download/v$pkgver/mlr-$pkgver.tar.gz")
sha512sums=('080167b60a93cc200467ba26537193758d7a1e5c1175569bd7306ed85179368e165feab5ae27128740f4665b379ada747911d9066b306bd79baea89a693d4b39')

build() {
    cd "$srcdir/mlr-$pkgver"
    ./configure --prefix="$pkgdir/usr"
    make
}

check() {
    cd "$srcdir/mlr-$pkgver"
    make check
}

package() {
    cd "$srcdir/mlr-$pkgver"
    make install
}
