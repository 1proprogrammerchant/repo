pkgname=julia-git-libiconv_jll-git
pkgver=1.16.0+8
pkgrel=3
pkgdesc="Libiconv_jll.jl"
url="https://github.com/JuliaBinaryWrappers/Libiconv_jll.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git libiconv)
provides=(julia-git-libiconv_jll)
source=(git://github.com/JuliaBinaryWrappers/Libiconv_jll.jl)
md5sums=('SKIP')

pkgver() {
  cd Libiconv_jll.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

build() {
  cd Libiconv_jll.jl

  sed -i -e '/^JLLWrapper/d' Project.toml

  /usr/lib/julia/julia-gen-jll.sh Libiconv_jll libcharset libiconv
}

package() {
  cd Libiconv_jll.jl

  . /usr/lib/julia/julia-install-pkg.sh Libiconv_jll "${pkgdir}" "${pkgname}" julia-git
}
