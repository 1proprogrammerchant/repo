_pkgname=nptyping
pkgname=python-nptyping
pkgver=2.4.0
pkgrel=1
pkgdesc='Type hints for Numpy'
url='https://github.com/ramonhagenaars/nptyping'
arch=('any')
license=('MIT')
depends=(
  python-numpy
)
makedepends=(
  python-setuptools
)
source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/ramonhagenaars/nptyping/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('ae8875ae4f4b78c8a862e10abe354dd4a49bc8d78a2c08236f7109b2228f2c2a48e06b978e1997e6a7369898aeac73fb7d21e69971acbabccb53058c1aa47fdd')

build() {
  cd ${_pkgname}-${pkgver}
  python setup.py build
}

package() {
  cd ${_pkgname}-${pkgver}
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
