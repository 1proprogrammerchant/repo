_pkgname=EasyOCR
pkgname=python-easyocr
pkgver=1.6.0
pkgrel=1
pkgdesc='End-to-End Multi-Lingual Optical Character Recognition (OCR) Solution for 80+ supported languages'
arch=('any')
url='https://github.com/jaidedai/easyocr'
license=('Apache')
depends=(
  python-bidi
  python-numpy
  python-opencv
  python-pillow
  python-pytorch
  python-scikit-image
  python-scipy
  python-torchvision
  python-yaml
)
makedepends=(
  python-setuptools
)
source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/JaidedAI/EasyOCR/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('a68a396f7072120c83ae4f263cf51913b546edb903b2d5021c4911d1ad57f1dd7c3c25bd02d27fd3c891de21d1fcafd9c6f3f32ddc0b8367618c5dbab86a2512')

build() {
  cd "${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
}
