optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('192f278082d48401ef725936b2f2598b0a3d9644c31f2b7ecfd396b4fd8f79af398c348c71f0c3f1c428c849087fa392a8684a3af333ffcf0916f5bcb345d1a1')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

