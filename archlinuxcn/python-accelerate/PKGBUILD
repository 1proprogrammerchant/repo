optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('9493eb4b5b8b3308e96c798e0421a59e449adf56cfc7e8e9ebf7c24ae494d6fa7de83e327f8d9b35eb24e66275d486b1459e3432184718d94debfb121629f606')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

