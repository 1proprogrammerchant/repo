optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('0f4aa8fa86afd2af8feca935bcb4e4e19250a6defe9f4635e1c1964df4caa22b317556a974281606f71d67b584730637d9308ffb4d273c0d6a8290e74f2b24c1')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

