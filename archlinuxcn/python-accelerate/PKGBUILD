optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('890eed820751e006c8f6e5c0a3390b649a5d9fffd2002d42134f39bf9c5732e0ebd3ca585b2f4f404dd0963cd212a82bd6681b0b3af2f6b5b7f96c48f5418339')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

