# Maintainer: Butui Hu <hot123tea123@gmail.com>

pkgname=radian
pkgver=0.6.1
pkgrel=1
pkgdesc='A 21 century R console'
arch=('any')
url='https://github.com/randy3k/radian'
license=('MIT')
depends=(
  python-lineedit
  python-rchitect
)
makedepends=(
  python-pip
  python-setuptools
)

source=("${pkgname}-${pkgver}.tar.gz::https://github.com/randy3k/radian/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('e768219e8f850062f2e6327d12ce7d61ed00eb74626ab224a6b33ef5963d44067e3cf99f955f42d0eaad48eb11e42c6743fb9a95361ebc014216527c8939c862')

build() {
  cd "${pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
# vim:set ts=2 sw=2 et:
