pkgname=julia-git-http-git
pkgver=1.2.1.0.9.g4d59f76f
pkgrel=1
pkgdesc="HTTP.jl"
url="https://github.com/JuliaWeb/HTTP.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
provides=(julia-git-http)
source=(git+https://github.com/JuliaWeb/HTTP.jl)
md5sums=('SKIP')

pkgver() {
  cd HTTP.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd HTTP.jl

  . /usr/lib/julia/julia-install-pkg.sh HTTP "${pkgdir}" "${pkgname}" julia-git
}
