# Maintainer: Hao Long <aur@esd.cc>

pkgname=gobuster
pkgver=3.2.0
pkgrel=2
pkgdesc="Directory/File, DNS and VHost busting tool written in Go"
arch=("x86_64" "i686")
url="https://github.com/OJ/gobuster"
license=('Apache')
provides=('gobuster')
conflicts=('gobuster')
depends=('glibc')
makedepends=('go')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/OJ/gobuster/archive/v${pkgver}.tar.gz")
sha256sums=('63094d24b79622d798f1aed2e497c8a6dd2bbeaa4fda7162ec71bc7070bf1a61')

build() {
  cd ${pkgname}-${pkgver}
  export CGO_CPPFLAGS="${CPPFLAGS}"
  export CGO_CFLAGS="${CFLAGS}"
  export CGO_CXXFLAGS="${CXXFLAGS}"
  export CGO_LDFLAGS="${LDFLAGS}"
  export GOFLAGS="-buildmode=pie -trimpath -ldflags=-linkmode=external -mod=readonly -modcacherw"
  go build .
}

package() {
  cd ${pkgname}-${pkgver}
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
  install -Dm755 gobuster "$pkgdir/usr/bin/gobuster"
}
